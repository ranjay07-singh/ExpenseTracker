{
  "compilerOptions": {
    "baseUrl": ".",                // Sets the root directory
    "paths": {
      "@/*": ["./*"]               // Maps @/ to project root
    }
  },
  "include": [
    "app",
    "src",
    ".expo/types/**/*.js",
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
